<div class="container">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h2><%= t "signup" %></h2>
      <%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :email, label: false, placeholder: t("email"), autofocus: true, required: true %>
          <%= f.input :password, label: false, placeholder: t("password"), required: true, hint: (t("minimum_password_length", length: @minimum_password_length.to_s) if @minimum_password_length) %>
          <%= f.input :password_confirmation, label: false, placeholder: t("password_confirmation"), required: true %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, t("signup"), class: "btn btn-primary" %>

          <%= render "devise/shared/links" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
