<div class="container p-t-1">

<div class="row">
  <div class="col-lg-4 col-lg-offset-2">
    <h2>Log in</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="form-inputs">
        <%= f.input :email, required: false, autofocus: true %>
        <%= f.input :password, required: false %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>

      <div class="form-actions">
        <%= f.button :submit, "Log in", class: 'btn btn-primary' %>
      </div>
    <% end %>
  </div>
  <div class="social-section col-lg-3 m-t-2">
    <div class="or-divider hidden-md-down">
        <div class="inner">
            <div class="loginReg__or">Or</div>
        </div>
    </div>
    <div class="social-column">
      <%= link_to(user_omniauth_authorize_path(:facebook), class: 'popup btn btn-primary m-b-1', :'data-width' => 600, :'data-height' => 400) do %>
        <i class="fa fa-facebook fa-lg"></i>&nbsp;&nbsp; Sign in with Facebook
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
</div>
