<div class="container">
  <div class="row">
    <div class="col-xl-5">
      <h2 class="section-header"><%= t('giveaway.tell_location') %></h2>
      <p><%= t('giveaway.tell_location_description', profile_url: edit_user_registration_path) %></p>
      <%= simple_form_for(@user, url: giveaway_edit_location_path, html: { method: :put }) do |f| %>
        <%= f.error_notification %>

        <div class="form-inputs">
          <%= f.input :contact_address, label: false, placeholder: t('contact_address') %>
          <%= f.input :contact_city, label: false, placeholder: t('contact_city') %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, 'Save location', class: 'btn btn-primary' %>
        </div>
      <% end %>
    </div>
  </div>
</div>

