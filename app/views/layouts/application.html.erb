<!DOCTYPE html>
<html>
<head>
  <title>Freebie</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-light bg-faded">
  <%= link_to 'Freebies', root_path, class: 'navbar-brand' %>
  <ul class="nav navbar-nav">
     <% unless user_signed_in? %>
        <li class="nav-item">
          <%= active_link_to 'Log in', new_user_session_path, class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= active_link_to 'Sign Up', new_user_registration_path, class: 'nav-link' %>
        </li>
      <% else %>
        <li class="nav-item">
          <%= active_link_to "Posts", class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= active_link_to "Campaigns", class: 'nav-link' %>
        </li>
        <li class="nav-item">
          <%= active_link_to "Log out (#{current_user.email})", destroy_user_session_path, method: :delete, class: 'nav-link' %>
        </li>
      <% end %>
  </ul>
</nav>

<div class="container">
  <%= flash_messages %>
  <%= yield %>
</div>

</body>
</html>
