<h1>Edit Donation</h1>

<%= simple_form_for @donation, :url => me_campaign_donation_path(@campaign, @donation), :method => :put do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>