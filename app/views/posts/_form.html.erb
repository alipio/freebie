<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title, label: false, placeholder: t(".title") %>
    <%= f.input :description, label: false, as: :text, placeholder: t(".description"), :input_html => { :rows => 10 }  %>
    <%= f.input :location, label: t(".location"), collection: ["Hồ Chí Minh", "Hà Nội"], input_html: { value: @location }  %>
    <%= f.input :category, collection: @categories, label_method: :display_name, label: t(".category"), selected: params[:category], include_blank: true, placeholder: t(".location") %>
    <%= f.input :main_image, as: :file, class: 'form-control fileinput-button', label: t(".main_image") %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, value: @post.persisted? ? t(".submit_edit") : t(".submit_new"), class: "btn btn-primary btn-block" %>
  </div>
<% end %>
