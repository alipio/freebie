<div class="container">
<p id="notice"><%= notice %></p>

<div class="row">
<% @posts.each do |post| %>
 <div class="col-md-4"> 
  <div class="card">
  <%= link_to (image_tag post.main_image_url), post %>
    <div class="card-block">
      <h4 class="card-title"><%= link_to post.title, post_path(post) %> </h6></h4>
      <p class="card-text"><%= truncate(post.description, length: 50) %></p>

      <span class="label label-pill <%= post_style_class %> post-status"><%= I18n.t post_status(post) %></span>
      <%= active_link_to I18n.t(".edit"), '#', class: 'card-link' %>

      <% if post.public? %>
      <%= active_link_to I18n.t(".close"), '#', class: 'card-link' %>
      <% end %>
      <% if post.closed? %>
      <%= active_link_to I18n.t(".reopen"), '#', class: 'card-link' %>
      <% end %>
    </div>
  </div> 
  </div> 
<% end %>
</div>
</div>
