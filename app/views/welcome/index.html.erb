<section class="introduction">
  <div class="ads">
    <%= image_tag "donations_hires.jpg", class: "img-responsive" %>
    <div class="info">
      <h3><%= t(".title_1") %></h3>
      <h3><%= t(".title_2") %></h3>
      <p><%= t(".message") %></p>
      <%= link_to t(".btn_action"), giveaways_path, class: "btn btn-lg btn-inverse" %>
    </div>
  </div>
  <p class="description">
    <%= t(".description") %>
  </p>
</section>
<section class="overview">
  <div class="row">
    <%= image_tag "find_stuff_2.jpg", class: "col-xs-12 col-sm-12 col-md-6 col-lg-6 img-responsive" %>
    <div class="content col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <h3><%= t(".overview.title") %></h3>
      <p><%= t(".overview.message") %></p>
      <%= link_to t(".overview.btn_action"), posts_path, class: "btn btn-block btn-lg btn-inverse" %>
    </div>
  </div>
</section>

<section class="campaign">
  <div class="row">
    <div class="content col-xs-12 col-sm-12 col-md-6 col-lg-6">
      <h3><%= t(".campaign.title") %></h3>
      <p><%= t(".campaign.message") %></p>
      <%= link_to t(".campaign.btn_action"), campaigns_path, class: "btn btn-block btn-lg btn-inverse" %>
    </div>
    <%= image_tag "campaign.jpg", class: "col-xs-12 col-sm-12 col-md-6 col-lg-6" %>
  </div>
</section>
